<div class="module__header">
    <h4>VCF</h4>
</div>
<div class="module__control-group">
    <div class="label-container">
        <span class="label">FREQ</span>
        <span class="label">RES</span>
    </div>
    <div class="fader-container">
        <div class="fader">
            <div class="fader__scale">
                <div class="fader__slot">
                    <div class="fader__knob" data-param="vcf-cutoff" data-value="1">
                        <hr>
                    </div>
                </div>
                <div class="fader__slot">
                    <div class="fader__knob" data-param="vcf-res" data-value="0">
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="module__switch-control-group">
    <div class="knob-container--pwm">
        <p class="label">^</p>
        <div class="switch" data-param="vcf-invert" data-value="1">
            <div class="switch__knob">
            </div>
        </div>
        <p class="label">v</p>
    </div>
</div>
<div class="module__control-group">
    <div class="label-container">
        <span class="label">ENV</span>
        <span class="label">LFO</span>
        <span class="label">KBD</span>
    </div>
    <div class="fader-container">
        <div class="fader">
            <div class="fader__scale">
                <div class="fader__slot">
                    <div class="fader__knob" data-param="vcf-envMod" data-value="0">
                        <hr>
                    </div>
                </div>
                <div class="fader__slot">
                    <div class="fader__knob" data-param="lfo-freqMod" data-value="0">
                        <hr>
                    </div>
                </div>
                <div class="fader__slot">
                    <div class="fader__knob">
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>