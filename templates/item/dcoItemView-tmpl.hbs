<div class="module__header">
    <h4>DCO</h4>
</div>
<div class="module__switch-control-group">
    <div class="label-container range">
        <span class="label">RANGE</span>
    </div>
    <div class="knob-container--range">
        <p class="range">4'</p>
        <p class="range">8'</p>
        <p class="range">16'</p>
        <div class="switch" data-param="dco-range" data-value="1">
            <div class="switch__knob--middle" title="Oscillator range"></div>
        </div>
    </div>
</div>
<div class="module__control-group">
    <div class="label-container">
        <span class="label--wide">LFO</span>
        <span class="label--wide">PWM</span>
    </div>
    <div class="fader-container">
        <div class="fader">
            <div class="fader__scale--heavy"></div>
            <div class="fader__scale--light">
                <div class="fader__slot">
                    <div class="fader__knob" data-param="lfo-pitchMod" data-value="0" title="Pitch LFO">
                        <hr>
                    </div>
                </div>
                <div class="fader__slot">
                    <div class="fader__knob" data-param="dco-pwm" data-value="0" title="Pulse width modulation">
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="module__switch-control-group">
    <div class="knob-container--pwm">
        <span class="label--line">_________</span>
        <div class="line"></div>
        <p class="label">LFO</p>
        <div class="switch" data-param="dco-lfoPwmEnabled" data-value="0" title="Manual/LFO to Pulse width">
            <div class="switch__knob">
            </div>
        </div>
        <p class="label">MAN</p>
    </div>
</div>
<div class="button-container--top">    
    <p class="wave-label">PULSE</p>
    <div class="led"></div>
    <div class="button button--yellow" data-param="dco-pulse" data-value="0" title="Pulse on/off"></div>
</div>
<div class="button-container--top">
    <p class="wave-label">SAW</p>
    <div class="led led--lit"></div>
    <div class="button button--yellow pressed" data-param="dco-sawtooth" data-value="1" title="Saw on/off"></div>
</div>
<div class="module__control-group">
    <div class="label-container">
        <span class="label">SUB</span>
        <span class="label">NOISE</span>
    </div>
    <div class="fader-container">
        <div class="fader">   
            <div class="fader__scale--heavy"></div>
            <div class="fader__scale--light">
                <div class="fader__slot">
                    <div class="fader__knob" data-param="dco-sub" data-value="0" title="Sub-osc volume">
                        <hr>
                    </div>
                </div>
                <div class="fader__slot">
                    <div class="fader__knob" data-param="dco-noise" data-value="0" title="Noise volume">
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>